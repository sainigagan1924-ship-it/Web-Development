<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Password Strength Checker</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 40px;
        }

        input {
            padding: 8px;
            font-size: 16px;
            width: 250px;
        }

        button {
            padding: 8px 14px;
            font-size: 16px;
            margin-left: 5px;
            cursor: pointer;
        }

        .result {
            margin-top: 20px;
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h2>Password Strength Checker</h2>

    <input type="password" id="passwordInput" placeholder="Enter password">
    <button onclick="checkPassword()">Verify</button>

    <div class="result" id="result"></div>

    <script>
        function checkPassword() {
            let password = document.getElementById("passwordInput").value;
            let length = password.length;

            if (length < 6) {
                document.getElementById("result").innerText = "Weak Password";
            } 
            else if (length >= 6 && length <= 9) {
                document.getElementById("result").innerText = "Medium Password";
            } 
            else {
                document.getElementById("result").innerText = "Strong Password";
            }
        }
    </script>

</body>
</html>
