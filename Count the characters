<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Text Analyzer</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }

      textarea {
        width: 100%;
        height: 150px;
        font-size: 16px;
        padding: 10px;
        resize: both;
      }

      button {
        margin-top: 10px;
        padding: 6px 14px;
        font-size: 16px;
        cursor: pointer;
      }

      .result {
        margin-top: 20px;
        font-size: 18px;
      }

      .result p {
        margin: 8px 0;
      }
    </style>
  </head>
  <body>
    <textarea id="textInput">hello Students. How are you?</textarea>
    <br />
    <button onclick="analyzeText()">Analyze</button>

    <div class="result">
      <p id="charCount">Characters (including spaces): 0</p>
      <p id="wordCount">Words: 0</p>
      <p id="sentenceCount">Sentences (full stops): 0</p>
    </div>

    <script>
      function analyzeText() {
        let text = document.getElementById("textInput").value;

        let characters = text.length;
        let words = text.split(" ").length;
        let sentences = 0;

        for (let i = 0; i < text.length; i++) {
          if (text[i] === ".") {
            sentences++;
          }
        }

        document.getElementById("charCount").innerText =
          "Characters (including spaces): " + characters;

        document.getElementById("wordCount").innerText = "Words: " + words;

        document.getElementById("sentenceCount").innerText =
          "Sentences (full stops): " + sentences;
      }
    </script>
  </body>
</html>
